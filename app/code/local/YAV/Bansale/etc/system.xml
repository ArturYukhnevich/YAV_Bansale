<?xml version="1.0" encoding="UTF-8" ?>
<config>
    <tabs>
        <yav translate="label" module="bansale">
            <label>YAV</label>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
        </yav>
    </tabs>
    <sections>
        <bansale translate="label" module="bansale">
            <class>separator-top</class>
            <label>Prohibition of sale</label>
            <tab>yav</tab>
            <frontend_type>text</frontend_type>
            <sort_order>110</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <settings translate="label" module="bansale">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <expanded>1</expanded>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>YAV_Bansale_Model_Source_Status</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Is module enabled</comment>
                        </enabled>
                        <starttime translate="label comment">
                            <label>Start time</label>
                            <frontend_type>select</frontend_type>
                            <source_model>YAV_Bansale_Model_Source_TimeSelect</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </starttime>
                        <endtime translate="label comment">
                            <label>End time</label>
                            <frontend_type>select</frontend_type>
                            <source_model>YAV_Bansale_Model_Source_TimeSelect</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </endtime>
                        <category translate="label comment">
                            <label>Category</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>YAV_Bansale_Model_Source_CategorySelect</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </category>
                    </fields>
                </settings>
            </groups>
        </bansale>
    </sections>
</config>