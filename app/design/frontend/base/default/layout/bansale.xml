<?xml version="1.0" ?>
<layout version="0.1.0">
    <catalog_category_default>
        <reference name="product_list">
            <action method="setTemplate">
                <template>bansale/catalog/product/list.phtml</template>
            </action>
        </reference>
    </catalog_category_default>
    <catalog_category_layered>
        <reference name="product_list">
            <action method="setTemplate">
                <template>bansale/catalog/product/list.phtml</template>
            </action>
        </reference>
    </catalog_category_layered>
    <catalog_product_view>
        <reference name="content">
            <reference name="product.info.addtocart">
                <action method="setTemplate">
                    <template>bansale/catalog/product/view/addtocart.phtml</template>
                </action>
            </reference>
        </reference>
    </catalog_product_view>
    <catalog_product_compare_index>
        <reference name="catalog.compare.list">
            <action method="setTemplate">
                <template>bansale/catalog/product/compare/list.phtml</template>
            </action>
        </reference>
    </catalog_product_compare_index>
    <wishlist_index_index>
        <reference name="customer.wishlist.item.cart">
            <action method="setTemplate">
                <template>bansale/wishlist/cart.phtml</template>
            </action>
        </reference>
        <reference name="customer.wishlist.button.toCart">
            <action method="setTemplate">
                <template>bansale/wishlist/tocart.phtml</template>
            </action>
        </reference>
    </wishlist_index_index>
</layout>